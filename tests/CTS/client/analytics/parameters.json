[
  {
    "testName": "fallbacks to the alias when region is not given",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "my-app-id",
          "apiKey": "my-api-key"
        },
        "expected": {}
      },
      {
        "type": "method",
        "object": "$client",
        "path": "getAverageClickPosition",
        "parameters": {
          "index": "my-index"
        },
        "expected": {
          "type": "host",
          "match": "analytics.algolia.com"
        }
      }
    ]
  },
  {
    "testName": "uses the correct region",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "my-app-id",
          "apiKey": "my-api-key",
          "region": "de"
        },
        "expected": {}
      },
      {
        "type": "method",
        "object": "$client",
        "path": "post",
        "parameters": {
          "path": "/test"
        },
        "expected": {
          "type": "host",
          "match": "analytics.de.algolia.com"
        }
      }
    ]
  },
  {
    "testName": "throws when incorrect region is given",
    "autoCreateClient": false,
    "steps": [
      {
        "type": "createClient",
        "parameters": {
          "appId": "my-app-id",
          "apiKey": "my-api-key",
          "region": "not_a_region"
        },
        "expected": {
          "error": "`region` must be one of the following: de, us"
        }
      }
    ]
  },
  {
    "testName": "getAverageClickPosition throws without index",
    "steps": [
      {
        "type": "method",
        "object": "$client",
        "path": "getClickPositions",
        "parameters": {
          "index": null
        },
        "expected": {
          "error": "Parameter `index` is required when calling `getClickPositions`."
        }
      }
    ]
  }
]
