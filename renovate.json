{
  "extends": [
    "config:js-app",
    "algolia"
  ],
  "enabledManagers": [
    "npm",
    "nvm",
    "gradle",
    "composer"
  ],
  "baseBranches": [
    "chore/renovateBaseBranch"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "required_provider"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "ignorePaths": [
    "!clients/algoliasearch-client-javascript/requester-*/**",
    "!clients/algoliasearch-client-javascript/client-common/**"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 50
}
