{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "algolia"
  ],
  "enabledManagers": [
    "npm",
    "nvm",
    "gradle",
    "composer",
    "regex"
  ],
  "baseBranches": [
    "chore/renovateBaseBranch"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "required_provider"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackagePatterns": [
        "openapi-generator"
      ],
      "groupName": "openapi-generator"
    }
  ],
  "regexManagers": [
    {
      "description": "Update openapitools-cli version in the config file",
      "fileMatch": [
        "openapitools.json"
      ],
      "matchStrings": [
        "\\s\"version\": \"(?<currentValue>.*?)\",?\\s"
      ],
      "depNameTemplate": "org.openapitools:openapi-generator-cli",
      "datasourceTemplate": "maven"
    },
    {
      "description": "Update package.json mustache devDeps",
      "fileMatch": [
        "package.mustache"
      ],
      "matchStrings": [
        "\\s\"(?<depName>.*?)\": \"(?<currentValue>.*?)\",?\\s"
      ]
    }
  ],
  "ignorePaths": [
    "**/algoliasearch/**",
    "**/client-abtesting/**",
    "**/client-analytics/**",
    "**/client-insights/**",
    "**/client-personalization/**",
    "**/client-predict/**",
    "**/client-query-suggestions/**",
    "**/client-search/**",
    "**/client-sources/**",
    "**/recommend/**",
    "clients/algoliasearch-client-php/composer.json",
    "tests/output/**"
  ],
  "prHourlyLimit": 20,
  "prConcurrentLimit": 50
}
