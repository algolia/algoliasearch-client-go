{
  "extends": [
    "config:js-app",
    "algolia"
  ],
  "enabledManagers": [
    "npm",
    "nvm",
    "gradle",
    "composer"
  ],
  "baseBranches": [
    "chore/renovateBaseBranch"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "required_provider"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "config/openapitools.json"
      ],
      "matchString": [
        "\"version\": \"(?<currentValue>.*?)\","
      ],
      "depNameTemplate": "com.openapitools:openapi-generator-cli",
      "datasourceTemplate": "maven"
    }
  ],
  "ignorePaths": [
    "**/client-abtesting/**",
    "**/algoliasearch/**",
    "**/algoliasearch-lite/**",
    "**/client-analytics/**",
    "**/client-insights/**",
    "**/client-personalization/**",
    "**/client-predict/**",
    "**/client-query-suggestions/**",
    "**/client-search/**",
    "**/client-sources/**",
    "**/recommend/**",
    "clients/algoliasearch-client-php/composer.json",
    "tests/output/**"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 50
}
