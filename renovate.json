{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    "algolia"
  ],
  "enabledManagers": [
    "npm",
    "nvm",
    "gradle",
    "composer",
    "regex"
  ],
  "baseBranches": [
    "chore/renovateBaseBranch"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "required_provider"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "regexManagers": [
    {
      "description": "Update openapitools-cli version in the config file",
      "fileMatch": [
        "openapitools.json"
      ],
      "matchStrings": [
        "\\s\"version\": \"(?<currentValue>.*?)\",\\s"
      ],
      "depNameTemplate": "org.openapitools:openapi-generator-cli",
      "datasourceTemplate": "maven"
    },
    {
      "description": "Update package.json mustache devDeps",
      "fileMatch": [
        "package.mustache"
      ],
      "matchStrings": [
        "\\s\"@types/node\": \"(?<currentValue>.*?)\",\\s"
      ],
      "depNameTemplate": "@types/node",
      "datasourceTemplate": "npm"
    },
    {
      "description": "Update package.json mustache devDeps",
      "fileMatch": [
        "package.mustache"
      ],
      "matchStrings": [
        "\\s\"typescript\": \"(?<currentValue>.*?)\",\\s"
      ],
      "depNameTemplate": "typescript",
      "datasourceTemplate": "npm"
    },
    {
      "description": "Update package.json mustache devDeps",
      "fileMatch": [
        "package.mustache"
      ],
      "matchStrings": [
        "\\s\"jest\": \"(?<currentValue>.*?)\",\\s"
      ],
      "depNameTemplate": "jest",
      "datasourceTemplate": "npm"
    },
    {
      "description": "Update package.json mustache devDeps",
      "fileMatch": [
        "package.mustache"
      ],
      "matchStrings": [
        "\\s\"ts-jest\": \"(?<currentValue>.*?)\",\\s"
      ],
      "depNameTemplate": "ts-jest",
      "datasourceTemplate": "npm"
    },
    {
      "description": "Update package.json mustache devDeps",
      "fileMatch": [
        "package.mustache"
      ],
      "matchStrings": [
        "\\s\"ts-node\": \"(?<currentValue>.*?)\",\\s"
      ],
      "depNameTemplate": "ts-node",
      "datasourceTemplate": "npm"
    }
  ],
  "ignorePaths": [
    "**/algoliasearch-lite/**",
    "**/client-abtesting/**",
    "**/client-analytics/**",
    "**/client-insights/**",
    "**/client-personalization/**",
    "**/client-predict/**",
    "**/client-query-suggestions/**",
    "**/client-search/**",
    "**/client-sources/**",
    "**/recommend/**",
    "clients/algoliasearch-client-php/composer.json",
    "tests/output/**"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 50
}
