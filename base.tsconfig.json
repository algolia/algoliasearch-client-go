{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "declaration": true,
    "lib": ["ESNext"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "resolveJsonModule": true
  }
}
